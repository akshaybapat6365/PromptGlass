{
  "manifest_version": 3,
  "name": "PromptGlass",
  "version": "3.1",
  "description": "Minimalist prompt helper with token counting, cost estimation & service monitoring.",
  "icons": {
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "options_ui": {
    "page": "src/options.html",
    "open_in_tab": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://gemini.google.com/*"
      ],
      "js": [
        "src/stats.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://gemini.google.com/*"
      ],
      "js": [
        "src/content.js"
      ],
      "css": [
        "src/styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "PromptGlass",
    "default_popup": "src/popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  }
}